@model FilmBase.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>

    @if (Model.BirthDate.HasValue)
    {
        <li>Birthdate: @Model.BirthDate.Value.ToShortDateString()</li>
    }
    <li>Membership Type: @Model.MembershipType.Name</li>
    <li>Membership Duration:  @(Model.MembershipType.DurationInMonths < 1 ? " -" : Model.MembershipType.DurationInMonths == 1 ?  "1 Month" : Model.MembershipType.DurationInMonths.ToString() + " Months")</li>
    <li>Discount Rate: @Model.MembershipType.DiscountRate%</li>
    <li>Subscribed to Newsletter?: @(Model.IsSubscribedToNewsletter == false ? "No" : "Yes")</li>

</ul>

